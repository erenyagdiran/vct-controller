<?xml version="1.0" encoding="utf-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
    <Document>
        <name>Testbed Nodes Locations</name>
        <open>1</open>
        <description>
            CONFINE Nodes recording info.
        </description>
        <!--Style id="pointIcon">
          <IconStyle>
            <Icon>
              <scale>0.5</scale>
              <href>img/map_marker_scenic.png</href>
            </Icon>
          </IconStyle>
        </Style-->
        {% for location in locations %}
            <Placemark>
                <name>{{ location.name }}</name>
                <description>{{ location.description }}</description>
            <Point>
                <coordinates>{{location.lng}},{{location.lat}}</coordinates>
            </Point> 
          </Placemark>
        {% endfor %}
    </Document>
</kml>